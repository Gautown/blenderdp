---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getCollection } from 'astro:content';

const studyMaterials = await getCollection('study-materials');
---

<MainLayout title="学习资料">
  <Breadcrumb 
    links={[
      { href: '/', label: '首页' },
      { href: '#', label: '学习资料' }
    ]} 
  />
  
  <h2 class="Collection-tile">学习资料</h2>
  
  <div class="content-grid grid-5">
    {studyMaterials.map(studyMaterial => (
      <a href={`/study-materials/${studyMaterial.id}`} class="content-card" aria-label={`查看学习资料：${studyMaterial.data.title}`}>
        <div class="card-image">
          <img 
            src={studyMaterial.data.thumbnail || "/images/noimg.gif"} 
            alt={studyMaterial.data.title} 
 
            class="placeholder-image" 
          />
        </div>
        <div class="card-content">
          <span class="card-tag">学习资料</span>
          <h3 class="card-title">{studyMaterial.data.title}</h3>
          <p class="card-date">未知日期</p>
        </div>
      </a>
    ))}
  </div>
  
  {studyMaterials.length === 0 && (
    <p style="text-align: center; margin-top: 2rem;">暂无学习资料</p>
  )}
</MainLayout>

<style>
  /* study-materials页面特定样式可以保留 */
</style>