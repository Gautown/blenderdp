---
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
import Rollbar from '../components/Rollbar.astro';
import { getEntry } from 'astro:content';

const siteConfig = await getEntry('site-config', 'site');

// 设置页面元数据
const title = Astro.props.title || siteConfig?.data.title || 'GauTown Studio';
const description = Astro.props.description || siteConfig?.data.description || '现代化内容管理系统';
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="keywords" content={siteConfig?.data.keywords || ''}>
  <link rel="icon" href="/images/favicon.svg" type="image/svg+xml">
  <title>{title}</title>
  <link rel="stylesheet" href="/fonts/bootstrap-icons.css">
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body>
  <SiteHeader />
  
  <slot name="hero" />
  
  <main class="main-content">
    <slot />
  </main>
  
  <SiteFooter />
  
  <Rollbar />
</body>
</html>